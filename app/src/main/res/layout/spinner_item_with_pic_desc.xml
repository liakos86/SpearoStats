<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/standard_view_height"
    android:orientation="vertical"
     >

    <ImageView
        android:id="@+id/left_pic"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/four"
        android:layout_width="@dimen/thirty"
        android:layout_height="@dimen/thirty"
        />

    <TextView
        android:id="@+id/text_main_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/left_pic"
        android:textColor="@color/primary_grey"
        android:textSize="@dimen/fifteen_sp"
        android:textStyle="bold" />

</RelativeLayout>