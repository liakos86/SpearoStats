<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
 
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/marker4" />
    
    <ImageView android:layout_width="wrap_content"
        android:id="@+id/marker_fish"
        android:src="@drawable/fish_28"
        android:layout_marginLeft="@dimen/four"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
 
    <TextView
        android:id="@+id/fish_num_txt"
        android:layout_toRightOf="@+id/marker_fish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eight"
        android:layout_marginTop="@dimen/five"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="@color/primary_grey"
        android:textSize="@dimen/twenty"
        android:textStyle="bold" />
 
</RelativeLayout>
