<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/fishing_stats_flipper"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white_back"
             android:clickable="true"
             android:focusable="true"
             android:focusableInTouchMode="true">
        
    <ImageView
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/spearo_black"
          android:layout_marginBottom="@dimen/fifty" />
    
             <gr.liakos.spearo.custom.NestedScrollingListView
                 android:id="@+id/listview_fishing_stats"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
            
</ViewFlipper>