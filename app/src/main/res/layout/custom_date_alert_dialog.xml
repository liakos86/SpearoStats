<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
     <TextView 
         android:id="@+id/sessionDateText"
         android:padding="@dimen/twelve"
         android:text="@string/confirm_catches"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_four"
        android:gravity="center_vertical"
        android:background="@color/colorAccent"
        android:textColor="@color/white_back"
        android:textSize="@dimen/twentyfour_sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <DatePicker
        android:id="@+id/sessionDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="calendar" />

    <include layout="@layout/alert_buttons_layout"/>

</LinearLayout>
