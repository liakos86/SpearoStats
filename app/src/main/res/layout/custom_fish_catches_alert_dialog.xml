<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    
     <TextView 
         android:padding="@dimen/twelve"
         android:text="@string/confirm_catches"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_four"
        android:gravity="center_vertical"
        android:background="@color/colorAccent"
        android:textColor="@color/white_back"
        android:textSize="@dimen/eighteen_sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        />
    
    
    
     <ListView android:layout_width="match_parent"  android:layout_height="match_parent" android:id="@+id/listViewSessionCatches"/>

</LinearLayout>
