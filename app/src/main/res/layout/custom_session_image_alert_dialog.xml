<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
    >
        
     <TextView 
         android:padding="@dimen/twelve"
         android:text="@string/session_image_alert"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_four"
        android:gravity="center_vertical"
        android:background="@color/colorAccent"
        
        android:textColor="@color/white_back"
        android:textSize="@dimen/fifteen_sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        />

     <TextView
         android:padding="@dimen/twelve"
         android:text="@string/session_image_alert_prompt_text"
         android:layout_width="match_parent"
         android:layout_height="@dimen/one_hundred"
         android:gravity="center_vertical"
         android:textColor="@color/primary_grey"
         android:textSize="@dimen/twelve_sp"
         android:textStyle="bold" />

     <include layout="@layout/alert_buttons_yes_no_layout" />
   
</LinearLayout>
